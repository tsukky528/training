<%- model_class = Training -%>
<div class="page-header">
  <h1><%= params[:muscle] %>の筋トレ</h1>
</div>

<table class="table table-striped">
  <tbody>
    <% @trainings.each do |training| %>
    <tr>
	<% if training.youtube? %>
		<td><%= training.youtube.html_safe %></td>
	<% else %>
		<td>
      <%#= link_to :movie, training.movie_url, id: "movie" %>
      <%#= flowplayer_for :movie, '/flowplayer.swf' do |player|
           player.playlist [{:url => "video_still.jpg" },
                            {:url => "video_560x315.flv",
                             :autoplay => false,
                             :autoBuffering => true}]
           player.onload do
           'this.unmute();'
           end
		  end %>
	   
     <%= link_to video_tag(training.movie_url, id: "movie", controls: true, autoplay: true, autoBuffering: true, loop: true, size: '560 x 315', poster: 'training.jpg') %>
		  <%#= binding.pry  %>
    </td>
	<% end %>
    <td  align="left">
      <%= training.explain %><br />
      <% @training = training %>

      <%= render 'like_form' if signed_in? %>
      
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_training_path(training), :class => 'btn btn-mini' %>
       <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                   training_path(training),
                   :method => :delete,
                   :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '本当に消去しますか？')) },
                   :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
    <% end %>
  </tbody>
</table>

