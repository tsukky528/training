<%- model_class = Training -%>
<div class="page-header">
  <h1><%= params[:muscle] %>の筋トレ</h1>
</div>

<table class="table table-striped">
  <tbody>
    <% @training.each do |training| %>
      <tr>
	<% if training.youtube? %>
		<td><%= training.youtube.html_safe %></td>
	<% else %>
		<td>
      <%= link_to :movie, training.movie_url.to_s, id: "movie" %>
      <%= flowplayer_for :video, '/flowplayer.swf' do |player|
          player.playlist [{:url => "video_still.jpg" },
                           {:url => "video_560x315.flv",
                            :autoplay => true,
                            :autoBuffering => true}]
          player.onload do
          'this.unmute();'
           end
      end%>
    </td>
	<% end %>
        <td  align="left">
          <%= training.explain %><br />
          <%#= link_to "詳細ページ", {:controller => "commeds", :action => "show", :id => commed.id}, :class => 'btn btn-mini' %>
          <%# @comms.each do |comm| %>
            <%# if current_user %>
              <%# if current_user.twittername == comm.admas %>
                <%#= link_to "編集", {:controller => "commeds", :action => "edit", :id => commed.id}, :class => 'btn btn-mini' %>
                <%#= link_to "消去", {:controller => "commeds", :action => "destroy", :id => commed.id},
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger btn-mini' %>
              <%# else %>
              <%# end %>
            <%# else %>
            <%# end %>
          <%# end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trainings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_training_path(@training), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              training_path(@training),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
