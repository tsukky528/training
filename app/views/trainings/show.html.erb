<%- model_class = Training -%>
<div class="page-header">
  <h1>作成確認</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:movie) %>:</strong></dt>
  <dd>
    <% if @training.youtube? %>
    <td><%= @training.youtube.html_safe %></td>
  <% else %>
    <td>
      <%= render 'video', training: @training %>
    </td>
  <% end %>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:explain) %>:</strong></dt>
  <dd><%= @training.explain %></dd>
  <dt><strong><%= model_class.human_attribute_name(:muscle) %>:</strong></dt>
  <dd><%= @training.muscle %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trainings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_training_path(@training), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              training_path(@training),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
